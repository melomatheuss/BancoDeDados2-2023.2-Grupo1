extends layout

block head
  link(rel="stylesheet", href="/stylesheets/settings.css")
  script(type="module", src="/javascripts/settings.js" defer) 

block content
  main(class="container d-flex align-items-center justify-content-center")
    form(class="d-flex flex-column align-items-center justify-content-center", action="/users/update?_method=PUT", method="POST", enctype="multipart/form-data")
      .mb-3.w-100.d-flex.align-items-center.justify-content-center
        .d-flex.flex-column.align-items-center.me-4
          | Current
          img.mt-1(src=user.image, alt=user.name)
        .d-flex.flex-column.align-items-center
          | Selected
          img.mt-1(id="selected", src=user.image, alt=user.name)
      .mb-3.w-100
        label(for="image", class="form-label") Pick Image
        input(type="file", class="form-control", id="image", name="image")
      .mb-5.w-100
        label(for="name", class="form-label") Name
        input(type="text", class="form-control", id="name", name="name", placeholder="Update your name", value=user.name)
      .d-flex.justify-content-between
        button(type="submit", class="btn btn-primary ms-auto") Update
